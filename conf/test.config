/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run icgc-argo-workflows/dnaaln -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check workflow function'

    // Input data
    input                      = "assets/test/mapped_joint_bam.csv"
    local_mode                 = true
    fasta                      = "assets/test/reference/tiny-grch38-chr11-530001-537000.fa"
    fasta_fai                  = "assets/test/reference/tiny-grch38-chr11-530001-537000.fa.fai"
    fasta_dict                 = "assets/test/reference/tiny-grch38-chr11-530001-537000.dict"
    germline_resource          = "assets/test/reference/tiny-chr11-exac_common_3.hg38.vcf.gz"
    germline_resource_tbi      = "assets/test/reference/tiny-chr11-exac_common_3.hg38.vcf.gz.tbi"
    autosome_non_gap           = "assets/test/reference/tiny-intervals.bed"

}

process {
    // process labels
    withLabel:process_single {
        cpus   = 1 
        memory = 3.GB
        time   = 4.h
    }
    withLabel:process_low {
        cpus   = 2
        memory = 6.GB
        time   = 4.h
    }
    withLabel:process_medium {
        cpus   = 3
        memory = 12.GB
        time   = 8.h
    }
}
